<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/story_title_heading"
            style="@style/search_results_heading"
            android:text="Title"/>
        <TextView
            android:id="@+id/story_title"
            style="@style/search_results_text"
            android:paddingLeft="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/story_author_heading"
            style="@style/search_results_heading"
            android:text="Author"/>
        <TextView
            android:id="@+id/story_author"
            style="@style/search_results_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/story_section_heading"
            style="@style/search_results_heading"
            android:text="Section"/>
        <TextView
            android:id="@+id/story_section"
            style="@style/search_results_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/story_publication_date_heading"
            style="@style/search_results_heading"
            android:text="Publication Date"/>
        <TextView
            android:id="@+id/story_publication_date"
            style="@style/search_results_text" />
    </LinearLayout>

</LinearLayout>